<div class="login">
    <form action="/login" method="post">
        <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert"><%= flash[:notice] %> </div>
        <% end %>
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control input-lg" type="text" name="email">
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input class="form-control input-lg" type="password" name="password">
        </div>
        <input class="form-control input-lg" type="submit" value="Login"/>
    </form>
</div>